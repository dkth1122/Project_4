<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.project.mapper.InquiryMapper">

	<!-- 미답변 문의 목록 출력 -->
	<select id="selectProductList" parameterType="hashmap" resultType="com.example.project.model.Inquiry">
		SELECT * FROM T4_INQUIRY
		WHERE STATE = 'OPEN' OR STATE = 'PENDING'
	</select>
	
	<!-- 문의 보기 -->
	<select id="selectProductInfo" parameterType="hashmap" resultType="com.example.project.model.Inquiry">
		SELECT * FROM T4_INQUIRY
		WHERE I_NO = #{iNo}
	</select>
	
	<!-- 문의 답변 -->
	<update id="updateInquiryAnswer" parameterType="hashmap">
		UPDATE T4_INQUIRY
		SET
			CATEGORY = #{category},
			STATE = #{state},
			P_NO = #{pNo},
			I_ACONTENT = #{iAcontent},
			I_COMPLAIN = #{iComplain},
			I_ATIME = NOW()
		WHERE I_NO = #{iNo}
	</update>
	
	
	
</mapper>